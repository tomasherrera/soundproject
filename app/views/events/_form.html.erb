
<%= simple_form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="span4">
    <div class="well">
    <%=f.hidden_field :user_id, :value => current_user.id %>
    <%=f.input :date, :input_html => { :size => 20, :id => "datepicker" } %>
    <%=f.input :time_and_duration %>    
    <%=f.input :price %>
    <%=f.input :description , :input_html => {:rows => 8}%>
    <%= f.input :artist_name, as: :string %>    
    <%= f.input :track_url, collection: [@event.track_url], :prompt => "Select the track"%>
    <div class="form-actions">
      <%= f.button :submit , :class => "btn btn-inverse btn-large" %>
    </div>
    </div>
  </div>  
<% end %>


